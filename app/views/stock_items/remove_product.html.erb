<h1>Remover estoque de Produto</h1>

<%= simple_form_for :remove_product, url: remove_product_stock_items_path, :method => :put, html: { class: 'horizontal-form' }  do |form| %>

  <div class="col-lg-12 form-group">
    <div class="row">
      <div class="col-lg-4 form-group">  
        <%= form.label :name, "Nome", :class => 'control-label' %>
        <input readonly="true" class = 'form-control' value="<%= @stock_item.store.name %>" />
        <%= form.hidden_field :store_id, id: :stock_item_store_id, :value => @stock_item.store_id, :class=> "form-control" %>
                     
      </div>
    </div>
    <div class="row">    
      <div class="col-lg-4 form-group">
        <%= form.label :product_id, "Produto" , :class => 'control-label' %>
        <input readonly="true" class = 'form-control' value="<%= @stock_item.product.name %>" />
        <%= form.hidden_field :product_id, id: :stock_item_product_id, :value => @stock_item.product_id, :class=> "form-control" %>
      </div>
    </div> 
    <div class="row"> 
      <div class="col-lg-2 form-group">
        <%= form.label :stock, "Quantidade de Estoque", :class => 'control-label' %>
        <input readonly="true" class = 'form-control' value="<%= @stock_item.stock %>" />
      </div>
    <div>  
    <div class="row"> 
      <div class="col-lg-2 form-group">
        <%= form.label :stock_remove, "Quantidade de Remoção", :class => 'control-label' %>
        <%= form.number_field :stock_remove, id: :stock_item_stock_remove, :class => 'form-control' %>
      </div>
    <div>  
  </div><br>

  <div class="row">
    <div class="col-lg-7 form-group">  
      <input type="submit" name="commit" class="btn btn-primary" value="Remover" data-disable-with="Salvar" />
        <%= link_to 'Voltar', products_path, :class => "btn btn-primary"%>
    </div>
  </div>


<% end %>

