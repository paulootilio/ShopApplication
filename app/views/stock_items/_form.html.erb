<%= form_with(model: stock_item, local: true) do |form| %>
  <% if stock_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stock_item.errors.count, "error") %> prohibited this stock_item from being saved:</h2>

      <ul>
      <% stock_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-lg-12 form-group">
    <div class="row">
      <div class="col-lg-4 form-group">  
        <%= form.label :name, "Nome", :class => 'control-label' %>
        <input readonly="true" class = 'form-control' value="<%= @store.name %>" />
        <%= form.hidden_field :store_id, id: :stock_item_store_id, :value => @store.id, :class=> "form-control" %>
                     
      </div>
    </div>
    <div class="row">    
      <div class="col-lg-4 form-group">
        <%= form.label :product_id, "Produto" , :class => 'control-label' %>
        <%= form.collection_select(:product_id, Product.order(:name), :id, :name, {:prompt=> 'Selecionar'}, :class=> "form-control", :id=> "product_id") %>              
      </div>
    </div> 
    <div class="row"> 
      <div class="col-lg-2 form-group">
        <%= form.label :stock, "Quantidade", :class => 'control-label' %>
        <%= form.number_field :stock, id: :stock_item_stock, :class => 'form-control' %>
      </div>
    <div>  
  </div><br>


  <div class="row">
    <div class="col-lg-7 form-group">  
      <input type="submit" name="commit" class="btn btn-primary" value="Adicionar" data-disable-with="Salvar" />
        <%= link_to 'Voltar', products_path, :class => "btn btn-primary"%>
    </div>
  </div>


<% end %>

