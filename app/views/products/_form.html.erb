<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-lg-12 form-group">
    <div class="row">
      <div class="col-lg-4 form-group">  
        <%= form.label :name, "Nome", :class => 'control-label' %>
        <%= form.text_field :name, id: :product_name, :class=> "form-control" %>              
      </div>
    </div>
    <div class="row">    
      <div class="col-lg-4 form-group">
        <%= form.label :description, "Descrição" , :class => 'control-label' %>
        <%= form.text_field :description, id: :product_description, :class => 'form-control' %>    
      </div>
    </div> 
    <div class="row"> 
      <div class="col-lg-2 form-group">
        <%= form.label :price, "Preço", :class => 'control-label' %>
        <%= form.text_field :price, id: :product_price, :class => 'form-control' %>
      </div>
    <div>  
  </div><br>


  <div class="row">
    <div class="col-lg-7 form-group">  
      <input type="submit" name="commit" class="btn btn-primary" value="Salvar" data-disable-with="Salvar" />
        <%= link_to 'Voltar', products_path, :class => "btn btn-primary"%>
    </div>
  </div>


<% end %>
