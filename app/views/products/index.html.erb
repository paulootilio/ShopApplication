<p id="notice"><%= notice %></p>
<div class="categdespesas index">
  <h2>Produtos </h2>
  <%= form_tag products_path( format:"html"), :method => 'get' do %>  
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-4  form-group">  
          <%= text_field_tag :name, params[:name], :class => 'form-control', :placeholder=>"Nome do Produto" %>  
        </div>
        <div class="col-lg-4 form-group">
          <%= submit_tag "Pesquisar", :class => "btn btn-primary" %>
        </div>       
        <div class="col-lg-2 form-group">  
          <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_product_path %>';"><i class="fa fa-plus-circle"></i> Novo Produto</button></span>
        </div>
      </div>
    </div>
  </div>
  <%end%>
      
  <div class="table-responsive">
    <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Preço</th>
          <th>Ação</th>
        </tr>        
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td>
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle fas fa-settings" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-cog"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li class="dropdown-item"><a class="fas fa-file"><%= link_to 'Exibir', product %></a></li>
                  <li class="dropdown-item"><a class="fas fa-edit"><%= link_to 'Editar', edit_product_path(product) %></a></li>
                  <li class="dropdown-item"><a class="fas fa-trash"><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'Deseja Deletar?' } %></a></li>
                </ul>
              </div>
            <td>              
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

