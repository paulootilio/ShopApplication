<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <h2 class="page-header">
        Visualizar Produto
      </h2>
    </div>
  </div>
  <div class="curso form">
    <div class="row">
      <div class="col-lg-4 form-group">   
        <label class = 'control-label'>Nome</label>
        <input readonly="true" class = 'form-control' value="<%= @product.name %>" />
      </div>
    </div>  

    <div class="row">
      <div class="col-lg-2 form-group">  
        <label class = 'control-label'>Descrição</label>
        <input readonly="true" class = 'form-control' value="<%= @product.description %>" />
      </div>
    </div>
        
    <div class="row">
      <div class="col-lg-2 form-group">  
        <label class = 'control-label'>Preço</label>
        <input readonly="true" class = 'form-control' value="<%= @product.price %>" />
      </div>
    </div><br>             
    
    <div class="row">
      <div class="col-lg-4 form-group">  
        <%= link_to 'Editar', edit_product_path(@product), :class => "btn btn-primary" %>
        <%= link_to 'Voltar', products_path, :class => "btn btn-primary"%>
      </div>
    </div>                    
  </div>
</div>
