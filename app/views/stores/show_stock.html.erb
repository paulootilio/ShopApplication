<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8">
      <h2 class="page-header">
        Visualizar Estoque de Loja
      </h2>
    </div>
    <div class="col-lg-2 form-group">  
      <%= link_to 'Voltar', stores_path, :class => "btn btn-primary"%>
    </div>
  </div>
  <div class="curso form">
    <div class="row">
      <div class="col-lg-4 form-group">   
        <label class = 'control-label'>Nome</label>
        <input readonly="true" class = 'form-control' value="<%= @store.name %>" />
      </div>
    </div>  

    <div class="row">
      <div class="col-lg-4 form-group">  
        <label class = 'control-label'>Endereço</label>
        <input readonly="true" class = 'form-control' value="<%= @store.address %>" />
      </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-8">  
            </div>   
            
          </div>
        </div>
      </div><br>    
    
    <div class="table-responsive">
      <table class="table table-hover table-striped" cellpadding="0" cellspacing="0">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Quatindade</th>
            <th>Ação</th>
          </tr>        
        </thead>
        <tbody>
          <% @stock_product.each do |stock_product| %>
            <tr>
              <td><%= stock_product.product.name %></td>
              <td><%= stock_product.stock %></td>
              <td>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle fas fa-settings" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fa fa-cog"></i>
                  </button>
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li class="dropdown-item"><a class="fas fa-anyx"><%= link_to 'Remover Produto', remove_product_stock_items_path(:stock_product => stock_product.product.id, :stock_store => stock_product.store.id) %></a></li>
                  </ul>
                </div>                
              <td>              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>           
                       
  </div>
</div>
